.toc-inner {
  box-sizing: border-box;
  position: sticky
  top: 80px
  margin: 2em 0 1em
  padding: 0.6em 1em
  background: #f5f5f5
  border-radius: 2px
  z-index: 2
  width: 300px
  .toc-header {
    font-size: 130%
  }
  .toc {
    li {
      margin: 0.5em 0
    }
  }
}

.post-container {
  position: relative
  .toc-container {
    position: absolute
    top: 0
    right: -320px
    height: 100%
  }
}